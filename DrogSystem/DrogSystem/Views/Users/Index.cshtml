@model DrogSystem.EntidadesDominio.EDUser
@{
    ViewBag.Title = "Usuarios";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/Sweetalert.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Usuario.js"></script>

<div class="container">
    <h2>Listado de Usuarios</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Agregar Usuario</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    <center>Usuario</center>
                </th>
                <th>
                    <center>Numero Documento</center>
                </th>
                <th>
                    <center>Tipo de Usuario</center>
                </th>
                <th>
                    <center>Operación</center>
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Usuario</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <input type="text" class="form-control" id="UsuarioId" placeholder="Id" style="visibility:hidden" />
                    </div>
                    <div class="form-group row">
                        <label for="Nombre" class="col-md-4 col-form-label">Usuario</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="Nombre" placeholder="Nombre Usuario" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Clave" class="col-md-4 col-form-label">Clave</label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" id="Clave" placeholder="Clave" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CodUsuario" class="col-md-4 col-form-label">Número Documento</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="CodUsuario" placeholder="Número Documento" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="TipoUsuarioId" class="col-md-4 col-form-label">Tipo de Usuario</label>
                        <div class="col-md-8">
                            <select class="form-control" id="TipoUsuarioId"></select>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Crear</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Modificar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="cerrar">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>



